# Git add, commit, push
function gacp() {
    git add .
    # git commit -m "[`git rev-parse --abbrev-ref HEAD | grep --only-matching -E 'CAI-[0-9]+'`] $1"
    git commit -a -m "$1"
    git push
}

# Git commit, push
function gcp() {
    # git commit -m "[`git rev-parse --abbrev-ref HEAD | grep --only-matching -E 'CAI-[0-9]+'`] $1"
    git commit -a -m "$1"
    git push
}

# Sneak changes into your previous commit
function gacpp() {
    git add .
    git commit --amend --no-edit
    git push -f
}

# Git add, commit
function gac() {
    git add .
    git commit -a -m "$1"
}

# Git create branch
function gcb() {
    git fetch
    git pull
    git checkout -b "$1"
    git push -u origin "$1"
}

# Git checkout
function gc() {
    git checkout "$1"
}

# git delete remote branch
function gdrb () {
    git push origin --delete "$1"
}

# git delete local branch
function gdlb () {
    git branch -D "$1"
}

function int() {
  open -a "IntelliJ IDEA.app" "$1"
}

